# Update these with your Supabase details from your project settings > API
# https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=

# Get this from your project's API settings (service_role key)
SUPABASE_SERVICE_ROLE_KEY=

# Creem.io Payment Configuration
CREEM_WEBHOOK_SECRET=
CREEM_API_KEY=
CREEM_API_URL=https://test-api.creem.io/v1

# Site URLs
NEXT_PUBLIC_SITE_URL=http://localhost:3000
BASE_URL=localhost:3000

# Redirect success url after payment
CREEM_SUCCESS_URL=http://localhost:3000/dashboard

# AI Configuration for Career Roadmap Generation
# Get your API key from OpenRouter (https://openrouter.ai/)
OPENROUTER_API_KEY=
# Model for job title validation (default: anthropic/claude-3-haiku)
OPENROUTER_CHECK_MODEL=anthropic/claude-3-haiku
# Model for roadmap generation (default: anthropic/claude-3-haiku)
OPENROUTER_ROADMAP_MODEL=anthropic/claude-3-haiku

# Optional: Upstash Redis for rate limiting
# Get these from Upstash (https://upstash.com/)
# UPSTASH_REDIS_REST_URL=
# UPSTASH_REDIS_REST_TOKEN=
# RATE_LIMIT_REQUESTS_PER_MINUTE=10

# Production Configuration (uncomment for production)
# CREEM_API_URL=https://api.creem.io
# NEXT_PUBLIC_SITE_URL=https://yourdomain.com
# CREEM_SUCCESS_URL=https://yourdomain.com/dashboard
